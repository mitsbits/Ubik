@model Ubik.Web.Membership.ViewModels.CopyRoleViewModel
<div class="col-md-6">
    <div class="box box-default">
        @using (Html.BeginForm("CopyRole", "UserAdministration", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="box-body">
                <div class="form-group hidden">
                    @Html.LabelFor(m => m.RoleId)
                    @Html.HiddenFor(m => m.RoleId, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.RoleId, "", new { @class = "" })
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">@Html.LabelFor(m => m.Name)</span>

                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "true" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "" })
                </div>
                <div class="form-group">
                    @Html.Partial("~/Areas/Backoffice/Views/UserAdministration/Partials/RoleClaims.cshtml", Model)
                </div>
            </div>
            <div class="box-footer">
                <div class="form-group">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Target, new { @class = "form-control" })

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default">Copy to new Role</button>
                        </div><!-- /btn-group -->
                    </div>
                    @Html.ValidationMessageFor(m => m.Target, "", new { @class = "" })
                </div>
            </div>

        }
    </div>
</div>